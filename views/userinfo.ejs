        <%- include('footer.ejs') %>
</body>

<script>
  var user_id =  user_id || "null";
  if (!user_id) {
    window.location.href = '/login';
  }
</script>

<style>
  body{
    margin-top:20px;
    color: #1a202c;
    text-align: left;
    background-color: #e2e8f0;    
}
.main-body {
    padding: 15px;
}
.card {
    box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
}

